<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center|top"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    android:padding="0dp"
android:layoutDirection="ltr"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp"
    android:background="#80FFFFFF"
    app:cardCornerRadius="5dp"
    app:cardElevation="7dp"


    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/line1"
    >



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:src="@mipmap/ic_download"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginRight="80sp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        tools:text="file name"
        android:id="@+id/file_name"
        android:fontFamily="@font/hekayatfont"
        android:textColor="@color/indigo"
        android:textSize="20sp"
        android:padding="5dp"

        android:layout_height="wrap_content"
        />
<ProgressBar
    android:layout_width="match_parent"

    android:id="@+id/download_progress"
    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
    android:layout_height="5dp"
android:progressTint="@color/indigo"
    />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="دانلود شده:0B  "
        android:textDirection="rtl"
        android:textSize="10sp"
        android:id="@+id/downloaded_size_txt"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10sp"
        android:id="@+id/status_txt"
        android:layout_marginLeft="10sp"
        android:gravity="end"
        android:textSize="10sp"
        android:layout_marginTop="5sp"


        />


</LinearLayout>

</LinearLayout>
<Button
    android:layout_width="wrap_content"
android:textDirection="rtl"
    android:text="شروع"
    android:padding="0dp"
    android:id="@+id/pause_resume"
    android:layout_gravity="center"
    android:fontFamily="@font/hekayatfont"
    android:textSize="16dp"
    android:backgroundTint="@color/indigo"
    android:textColor="@color/white"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
android:layout_marginLeft="-70dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content"

    />


</LinearLayout>

        <Button
            android:layout_width="200sp"
            android:textDirection="rtl"
android:layout_below="@id/line1"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="خواندن"
            android:padding="0dp"
            android:id="@+id/readOnline"
            android:layout_gravity="center"
            android:fontFamily="@font/hekayatfont"
            android:textSize="16dp"
            android:visibility="gone"
            android:backgroundTint="@color/indigo"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"

            />
        <View
            android:layout_width="match_parent"
            android:layout_below="@id/line1"
            android:background="#80716C6C"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>